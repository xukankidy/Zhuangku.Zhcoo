@{ Layout = null;}<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户登陆</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Plugin/bootstrap/css/bootstrap-reboot.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Plugin/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Plugin/bootstrap/css/bootstrap-grid.min.css" />
    <script type="text/javascript" src="~/Content/Plugin/jquery/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="~/Content/Plugin/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Content/Plugin/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/Content/Framework/js/QQLoginBackground.js"></script>
    <style type="text/css">
        #container {
            position: fixed;
            z-index: 100;
        }

        #PanelLogin {
            position: fixed;
            z-index: 200;
            background-color: #ffffff;
            width: 300px;
            height: 200px;
            border: solid 1px #438EB9;
            top: 40%;
            left: 50%;
            margin-top: -100px;
            margin-left: -150px;
            box-shadow: 0 0 10px #ffffff;
            border-radius: 5px;
            box-sizing: border-box;
            padding: 10px;
        }

        .row {
            margin-bottom: 8px;
        }

        .title {
            text-align: center;
            font-size: 18px;
            color: #438EB9;
        }
    </style>
</head>
<body>
    <div id="PanelLogin">
        <div class="container-fluid">
            <form>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="title"><span>后台管理系统</span></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <input id="Username" name="Username" type="text" class="form-control" placeholder="用户名..." />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <input id="Password" name="Password" type="password" class="form-control" placeholder="密码..." />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <button id="BtnLogin" type="button" class="btn btn-primary">登陆</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div id="container" style="width:100%;height:100%;">
        <div id="anitOut"></div>
    </div>

    <script type="text/javascript" src="~/Scripts/Module/Login/Index.js"></script>
</body>
</html>